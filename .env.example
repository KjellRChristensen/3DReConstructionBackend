# 3D Reconstruction Pipeline - Environment Configuration

# API Server
RECON_API_HOST=0.0.0.0
RECON_API_PORT=7001
RECON_API_WORKERS=4

# Processing
RECON_USE_GPU=true
RECON_DEFAULT_DPI=300
RECON_MAX_IMAGE_SIZE=8192

# Model defaults (meters)
RECON_DEFAULT_WALL_HEIGHT=2.8
RECON_DEFAULT_FLOOR_THICKNESS=0.3
RECON_DEFAULT_DOOR_HEIGHT=2.1
RECON_DEFAULT_WINDOW_HEIGHT=1.2
RECON_DEFAULT_WINDOW_SILL=0.9

# Detection
RECON_DETECTION_MODEL=yolov8
RECON_DETECTION_CONFIDENCE=0.5

# Redis (for async task queue)
RECON_REDIS_URL=redis://localhost:6379/0

# Logging
RECON_LOG_LEVEL=INFO
